############################################
# WMS Pallet Tag System - Environment Config
# - .env is local only (ignored by git)
# - This file is safe to commit as .env.example
############################################

############################################
# Runtime Mode
# - QA: connect to QA WMS for test orders/labels
# - PROD: connect to production WMS
############################################
WMS_ENV=QA

############################################
# Active Site
############################################
ACTIVE_SITE=TBG3002

############################################
# Oracle Auth (shared unless your org uses different accounts)
# If QA and PROD have different creds, add *_QA and *_PROD keys.
############################################
ORACLE_USERNAME=RPTADM
ORACLE_PASSWORD="__CHANGE_ME__"
ORACLE_PORT=1521
ORACLE_SERVICE=WMSP

############################################
# Oracle DB Hosts
# Format:
#   SITE_<site>_<env>_HOST
#
# You MUST fill in the correct DB hostnames/IPs for each environment.
# (These are NOT the same as MOCA service hosts shown in your XML.)
############################################

# Jersey City
SITE_TBG3002_QA_HOST=__CHANGE_ME__
SITE_TBG3002_PROD_HOST=10.19.68.61

# Example placeholders for other sites (optional)
#SITE_TBG3322_QA_HOST=__CHANGE_ME__
#SITE_TBG3322_PROD_HOST=__CHANGE_ME__

############################################
# Site display names (non-sensitive)
############################################
SITE_TBG3002_NAME=Jersey City
#SITE_TBG3322_NAME=Walnut DC

############################################
# DB Pool / Timeouts
############################################
DB_POOL_MAX_SIZE=5
DB_POOL_CONN_TIMEOUT_MS=3000
DB_POOL_VALIDATION_TIMEOUT_MS=2000

############################################
# Printer Config Files (site-scoped)
############################################
PRINTER_INVENTORY_FILE=config/TBG3002/printers.yaml
PRINTER_ROUTING_FILE=config/TBG3002/printer-routing.yaml

############################################
# Optional overrides for testing
############################################
#PRINTER_DEFAULT_ID=OFFICE
#PRINTER_FORCE_ID=OFFICE

############################################
# Optional printer tuning
############################################
#PRINT_CONNECT_TIMEOUT_MS=2000
#PRINT_WRITE_TIMEOUT_MS=5000
#PRINT_RETRY_COUNT=2